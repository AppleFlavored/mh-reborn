{
    "name": "Minehut Reborn",
    "version": "0.1.0",
    "author": "AppleFlavored",
    "description": "A modern dashboard for Minehut.",

    "background": {
        "page": "background/index.html"
    },

    "content_scripts": [
        {
            "js": [
                "inject.js"
            ],
            "matches": ["*://*.minehut.com/*"],
            "run_at": "document_start"
        }
    ],

    "permissions": [
        "*://*.minehut.com/*"
    ]
}